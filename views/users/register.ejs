    <%- include('../partials/head.ejs')  %> 
    <link rel="stylesheet" href="/css/homepage.css">
    <title>Register</title>
</head>

<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbarHome.ejs')  %> 
    <div class="d-flex flex-row justify-content-center p-2">
        <%- include('../partials/flashMsgs.ejs') %> 
    </div>
    <section class="container-fluid text-white">
        <div class="row justify-content-center">
            <div class="py-4 col-xl-3 col-lg-4 col-md-6 col-sm-8 col-12">
                <h3>Regístrate</h3>
                <form action="/register" method="post" class="form-validation" novalidate>
                    <label for="inputUsername" class="form-label">Nombre de usuario</label>
                    <input type="text" name="username" id="inputUsername" class="form-control" required>
    
                    <label for="inputEmail" class="form-label mt-2">Correo electrónico</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" required>
                    
                    <label for="inputPassword" class="form-label mt-2">Contraseña</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
    
                    <button id="login-button" type="submit" class="btn btn-success float-end mt-4">Registrarse</button>
                </form>
            </div>
        </div>
    </section>
</body>
</html>